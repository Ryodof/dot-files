confirm_os_window_close 0
cursor #cccccc
cursor_text_color #111111
cursor_shape underline
cursor_shape_unfocused block

tab_bar_style powerline
tab_powerline_style slanted
active_tab_foreground #b4befe
inactive_tab_foreground #6c7086

map ctrl+shift+right next_tab
map ctrl+shift+left previous_tab
map ctrl+shift+t new_tab
map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard
alias сfetch  chmod +x /home/ryodof/scripts/fetch
alias fetch  /home/ryodof/scripts/fetch

map ctrl+plus change_font_size all +2.0
map ctrl+minus change_font_size all -2.0

background_opacity 0.5

# Catppuccin Mocha color scheme for Kitty
foreground              #CDD6F4
background              #1E1E2E
selection_foreground    #1E1E2E
selection_background    #F5E0DC

